extends ./layout.jade

include ./mixins/issueActionButton

block content
  .content
    #problemCaption.row
      span= issue.issueCaption
    #problemMenu.row
      +issueActionButton(issue)
    #problemDescription.row
      p Dear,
      p Since yeasterday I have problems with the boiler.
    #problemCosts.row
      h3 Problem costs
      if costs.length > 0
        table.table
          for cost in costs
            tr
              td.paymentNOK
                = Math.abs(cost.amount)
                |&euro;
              td= cost.date
              td.fullWidth= cost.description
      if costs.length = 0 
        .noCost there are no cost yet
    #problemCommentsMenu.row
      h3 Comments
      if issue.status == 'open' || issue.status == 'on-hold'
        #addCommmentArea
          .commentPlaceholder
            span.glyphicon.glyphicon-plus
            | Click here to add a comment
          .commentEditArea
            .commentText(contenteditable='true')
            .commentButtons
              #addCommentButton.btn.btn-primary Add
              #cancelCommentButton.btn.btn-default Cancel
    #problemComments.row
      table.table
        tbody
          if issue.comments
            for comment in issue.comments
              tr
                td= comment
  script(type='text/javascript', src='js/jquery.js')
  script(type='text/javascript', src='js/bootstrap.js')
  script(type='text/javascript', src='js/issue.js')
